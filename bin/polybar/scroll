#!/bin/bash
zscroll -l 20 \
        --delay 5 \
        --scroll-padding " | " \
        --match-command "$HOME/.config/herbstluftwm/bin/polybar/status --status" \
        --match-text "Playing" "--scroll 1" \
        --match-text "Paused" "--scroll 0" \
        --update-check true "$HOME/.config/herbstluftwm/bin/polybar/status" &

wait